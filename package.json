{
  "name": "Tortuga",
  "description": "Hello Electron Forge, essentially",
  "author": {
    "name": "Team Tortuga"
  },
  "license": "ISC",
  "version": "1.0.3",
  "build": {
    "appId": "com.zootella.tortuga",
    "publish": {
      "provider": "generic",
      "url": "http://127.0.0.1:8080/"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "differentialPackage": false,
      "artifactName": "${productName}-${version}.${ext}",
      "uninstallDisplayName": "${productName}",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "postinstall": "electron-builder install-app-deps",
    "step1": "electron-builder --dir",
    "step2": "electron-builder",
    "step3": "electron-builder --publish always",
    "step4": "electron-builder --win --x64 --ia32"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zootella/tortuga.git"
  },
  "dependencies": {
    "chokidar": "^3.0.2",
    "electron-log": "^3.0.6",
    "electron-updater": "^4.0.14",
    "jquery": "^3.4.1",
    "vue": "^2.6.10"
  },
  "devDependencies": {
    "electron": "^5.0.6",
    "electron-builder": "^20.44.4",
    "http-server": "^0.11.1"
  }
}
