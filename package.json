{
  "name": "Tortuga",
  "description": "Hello Electron Forge, essentially",
  "author": {
    "name": "Team Tortuga"
  },
  "license": "ISC",
  "version": "1.0.7",
  "build": {
    "appId": "com.zootella.tortuga",
    "publish": {
      "provider": "generic",
      "url": "http://zootella.com/tortuga"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ],
      "certificateFile": "../your_code_signing_certificate.pfx",
      "certificatePassword": "your_exported_certificate_password"
    },
    "nsis": {
      "artifactName": "${productName}-${version}.${ext}",
      "uninstallDisplayName": "${productName}",
      "differentialPackage": false,
      "oneClick": true,
      "perMachine": false,
      "createStartMenuShortcut": true,
      "createDesktopShortcut": true
    }
  },
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "postinstall": "electron-builder install-app-deps",
    "dir": "electron-builder --dir",
    "build": "electron-builder",
    "publish": "electron-builder --publish always",
    "ia32": "electron-builder --win --x64 --ia32"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zootella/tortuga.git"
  },
  "dependencies": {
    "chokidar": "*",
    "electron-log": "*",
    "electron-updater": "*",
    "jquery": "*",
    "vue": "*"
  },
  "devDependencies": {
    "electron": "*",
    "electron-builder": "*"
  }
}
