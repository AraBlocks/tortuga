{
  "name": "Tortuga",
  "description": "A simple but complete Electron boilerplate",
  "author": {
    "name": "Little Star Media Inc"
  },
  "license": "ISC",
  "version": "1.0.8",
  "build": {
    "appId": "com.ara.one.araFileManager",
    "publish": {
      "provider": "generic",
      "url": "http://zootella.com/tortuga"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "dmg",
        "zip"
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist"
    },
    "dmg": {
      "sign": false
    },
    "afterSign": "notarize.js",
    "win": {
      "target": [
        "nsis",
        "zip"
      ],
      "certificateFile": "../your_code_signing_certificate.pfx",
      "certificatePassword": "your_exported_certificate_password"
    },
    "nsis": {
      "artifactName": "${productName}-${version}.${ext}",
      "uninstallDisplayName": "${productName}",
      "differentialPackage": false,
      "oneClick": true,
      "perMachine": false,
      "createStartMenuShortcut": true,
      "createDesktopShortcut": true
    }
  },
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "postinstall": "electron-builder install-app-deps",
    "dir": "electron-builder --dir",
    "build": "electron-builder",
    "publish": "electron-builder --publish always",
    "ia32": "electron-builder --win --x64 --ia32",
    "clean": "sh ./clean.sh",
    "power-wash": "sh ./power-wash.sh",
    "mac": "dist/mac/Tortuga.app/Contents/MacOS/Tortuga"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zootella/tortuga.git"
  },
  "dependencies": {
    "chokidar": "*",
    "electron-log": "*",
    "electron-updater": "^4.2.0",
    "jquery": "*",
    "vue": "*"
  },
  "devDependencies": {
    "electron": "*",
    "electron-builder": "*",
    "electron-notarize": "*"
  }
}
